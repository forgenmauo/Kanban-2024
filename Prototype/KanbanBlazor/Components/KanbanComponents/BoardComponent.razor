@attribute [StreamRendering]
@rendermode InteractiveServer


<div class="container vh-100">
    <div class="row h-50">
        @foreach (var column in SelectedBoard.Columns)
        {
            <div class="card col-md-3 d-flex flex-column p-1 m-1 border-1 bg-info">
                <div class="card-header">
                    <h4>@column.Name</h4>
                </div>
                <div class="card-body d-flex flex-column">
                    @foreach (var task in column.Tasks)
                    {
                        <div class="card p-1 m-1 border-1">
                            <h4>@task.Name</h4>
                            <p>@task.Description</p>
                        </div>
                    }
                    
                </div>
                <div class="card-footer mt-auto">
                    <button class="btn btn-primary w-100">Add Task</button>
                </div>
            </div>
            
        }
        <div class="col-1 border-1">
            <button class="btn btn-primary p-1 m-1">+</button>
        </div>
    </div>
</div>

@code {
    [CascadingParameter] public KUser? User { get; set; }
    [CascadingParameter] public KBoard SelectedBoard { get; set; }
}
